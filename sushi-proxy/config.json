{
  "global": {
    "name": "sushi-gateway-1",
    "plugins": [
      {
        "name": "jwt",
        "data": {
          "alg": "HS256",
          "iss": "someIssuerKey",
          "secret": "123secret456"
        }
      },
      {
        "name": "basic_auth",
        "data": {
          "username": "admin123",
          "password": "changeme"
        }
      },
      {
        "name": "acl",
        "data": {
          "whitelist": ["127.0.0.1", "127.0.0.2"],
          "blacklist": ["192.168.0.1"]
        }
      },
      {
        "name": "bot_protection",
        "data": {
          "blacklist": ["googlebot", "bingbot", "yahoobot"]
        }
      },
      {
        "name": "request_size_limit",
        "data": {
            "max_payload_size": 10
        }
      }
    ]
  },
  "services": [
    {
      "name": "sushi-svc",
      "base_path": "/sushi-service",
      "protocol": "http",
      "upstreams": [
        { "host": "localhost", "port": 8001 },
        { "host": "localhost", "port": 8002 }
      ],
      "credentials": [
        {
          "plugin": "key_auth",
          "data": {
            "key": "someKeyToAccessApi"
          }
        }
      ],
      "plugins": [
        {
          "name": "basic_auth",
          "data": {
            "username": "otherAdmin",
            "password": "changeme"
          }
        }
      ],
      "routes": [
        {
          "path": "/v1/sushi",
          "methods": ["GET"],
          "plugins": []
        },
        {
          "path": "/v1/sushi/restaurant",
          "methods": ["GET"],
          "plugins": []
        },
        {
          "path": "/v1/token",
          "methods": ["GET"],
          "plugins": []
        }
      ]
    }
  ]
}