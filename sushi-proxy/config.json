{
  "global": {
    "name": "sushi-gateway-1",
    "plugins": [
      {
        "name": "http_log",
        "enabled": true,
        "data": {
          "http_endpoint": "www.endpoint.com",
          "method": "POST",
          "content_type": "application/json",
          "timeout": 1000,
          "retry_count": 3,
          "queue_size": 1000,
          "flush_interval": 1000,
          "headers" : {
          }
        }
      },
      {
        "name": "mtls",
        "enabled": false,
        "data": {
        }
      },
      {
        "name": "acl",
        "enabled": true,
        "data": {
          "whitelist": ["127.0.0.1", "127.0.0.2"],
          "blacklist": ["192.168.0.1"]
        }
      },
      {
        "name": "bot_protection",
        "enabled": true,
        "data": {
          "blacklist": ["googlebot", "bingbot", "yahoobot"]
        }
      },
      {
        "name": "request_size_limit",
        "enabled": true,
        "data": {
            "max_payload_size": 10
        }
      }
    ]
  },
  "services": [
    {
      "name": "sushi-svc",
      "base_path": "/sushi-service",
      "protocol": "http",
      "upstreams": [
        { "host": "localhost", "port": 8001 },
        { "host": "localhost", "port": 8002 }
      ],
      "plugins": [],
      "routes": [
        {
          "path": "/v1/sushi",
          "methods": ["GET"],
          "plugins": []
        },
        {
          "path": "/v1/sushi/restaurant",
          "methods": ["GET"],
          "plugins": []
        },
        {
          "path": "/v1/token",
          "methods": ["GET"],
          "plugins": []
        }
      ]
    }
  ]
}